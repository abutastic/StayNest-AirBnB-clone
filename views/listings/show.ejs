<% layout("/layouts/boilerplate") %>
<script>
  const listing = <%- JSON.stringify(listing) %>;
</script>

<!-- Layout fixed and responsiveness adjusted. -->
<div class="container-fluid mt-3 mb-3">
  <!-- Title Section added -->
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <h3 class="text-center text-md-start"><%= listing.title %></h3>
    </div>
  </div>

  <!-- Listing Card -->
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="card mx-auto mb-4">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top img-fluid"
          alt="listing_image"
        />
        <div class="card-body">
          <p class="card-text mt-2">Owned by: <%= listing.owner.username %></p>
          <p class="card-text">
            <b>Other details</b> <br />
            <%= listing.description %> <br />
            &#8377; <%= listing.price.toLocaleString("en-IN") %> <br />
            <%= listing.location %> <br />
            <%= listing.country %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Owner Actions -->
  <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
  <div class="row justify-content-center mb-4">
    <div
      class="col-12 col-md-8 d-flex flex-column flex-md-row gap-2 justify-content-center"
    >
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>
      <form
        action="/listings/<%= listing._id %>/delete/?_method=DELETE"
        method="post"
      >
        <button class="btn btn-dark">Delete</button>
      </form>
    </div>
  </div>
  <% } %>

  <!-- Reviews Section -->
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 mb-4">
      <hr />

      <% if(currUser) { %>
      <h4 class="text-center">Leave a Review</h4>
      <form
        action="/listings/<%= listing._id %>/reviews"
        method="post"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <fieldset class="starability-slot d-flex justify-content-center">
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="1"
              checked
              aria-label="No rating."
            />
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>

        <div class="mb-3">
          <label for="comment">Comments</label>
          <textarea
            cols="30"
            rows="5"
            name="review[comment]"
            id="comment"
            class="form-control"
            required
          ></textarea>
          <div class="valid-feedback">Looks good</div>
          <div class="invalid-feedback">
            Please add a comment to submit your review
          </div>
        </div>
        <div class="text-center">
          <button class="btn btn-outline-dark">Submit</button>
        </div>
      </form>
      <hr />
      <% } %> <% if(listing.reviews.length > 0) { %>
      <div class="row">
        <p class="text-center"><b>All reviews</b></p>
        <% for(let review of listing.reviews) { %>
        <div class="col-12 col-md-6 mb-3">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">@<%= review.author.username %></h5>
              <p
                class="starability-result"
                data-rating="<%= review.rating %>"
              ></p>
              <p class="card-text"><%= review.comment %></p>
            </div>
            <% if(currUser && currUser._id.equals(review.author._id)) { %>
            <div class="card-footer">
              <form
                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                method="post"
              >
                <button class="btn btn-sm btn-dark w-100">Delete</button>
              </form>
            </div>
            <% } %>
          </div>
        </div>
        <% } %>
      </div>
      <% } %>
    </div>
  </div>

  <!-- Map Section -->
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 mb-4">
      <h3 class="text-center">Where you'll be</h3>
      <div id="map" style="width: 100%; height: 300px"></div>
    </div>
  </div>
</div>

<script src="/js/map.js"></script>
